{% extends 'base.html.twig' %}

{% block title %}Hello ResettingController!{% endblock %}

{% block body %}
    {# resetting/request.html.twig #}
<div class="container">
    <h1 class="h3 mb-3 font-weight-normal mt-3 text-center">Mot de passe oublié ?</h1>

    {# this check prevents starting a session when there are no flash messages #}
    {% if app.request.hasPreviousSession %}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success" role="alert">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('warning') %}
            <div class="alert alert-danger" role="alert">
                {{ message }}
            </div>
        {% endfor %}
    {% endif %}

    <p>Demandez à réinitialiser votre mot de passe en renseignant votre mail.</p>

    {{form_start(form)}}
    {{form_row(form.email)}}
    <button class="btn btn-success"  type="submit">Envoyer</button>
    {{form_end(form)}}

</div>
{% endblock %}
