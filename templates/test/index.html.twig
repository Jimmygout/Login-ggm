{% extends 'base.html.twig' %}

{% block title %}Test index{% endblock %}

{% block body %}
<div class="container">
    <h1 class="h3 mb-3 font-weight-normal mt-3 text-center">Test index</h1>
    {{ app.session.get('email') }}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Designation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for test in tests %}
            <tr>
                <td>{{ test.id }}</td>
                <td>{{ test.nom }}</td>
                <td>{{ test.designation }}</td>
                <td>
                    <a href="{{ path('test_show', {'id': test.id}) }}">show</a>
                    <a href="{{ path('test_edit', {'id': test.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('test_new') }}">Create new</a>

</div>
{% endblock %}
